@model Login
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <img src="/images/login.png" />
    <h1>Prihlásenie</h1>
</div>
@using(Html.BeginForm("LoginPost", "Account")) {
    <div class="mt-md-3">
        @if (ViewBag.IsInvalidLogin == true)
        {
            <div class="alert alert-warning">
                Nesprávne prihlasovacie údaje.
            </div>
        }
        <div class="form-group mt-2">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", autocomplete="username"})
            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
        </div>
        <div class="form-group mt-2">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
        </div>
        <div class="text-center mt-2">
            <button id="login-submit" type="submit" value="Submit" class="btn btn-primary">Prihlásiť sa</button>
        </div>
    </div>
}
<div class="mt-2">
    <a class="nav-link text-center text-primary text-decoration-underline" asp-controller="Account" asp-action="Register">Registrovať sa</a>
</div>

